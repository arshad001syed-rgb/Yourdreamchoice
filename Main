  <!-- AI Chatbot -->
  <script>
    feather.replace();

    const botContainer = document.createElement('div');
    botContainer.innerHTML = `
      <div id="chatbot" class="fixed bottom-6 right-6 bg-gradient-to-r from-blue-600 to-purple-600 rounded-full p-4 shadow-xl cursor-pointer" title="Ask DreamChoice AI">
        <i data-feather="message-circle" class="w-6 h-6 text-white"></i>
      </div>
      <div id="chat-box" class="hidden fixed bottom-20 right-6 bg-gray-800 rounded-lg shadow-2xl w-80 p-4">
        <div class="flex justify-between mb-2">
          <h3 class="text-white font-semibold">DreamChoice AI Assistant</h3>
          <button id="close-chat" class="text-gray-400 hover:text-white">‚úñ</button>
        </div>
        <div id="chat-content" class="h-48 overflow-y-auto text-gray-300 text-sm mb-3 border border-gray-700 rounded p-2"></div>
        <input id="chat-input" type="text" placeholder="Ask something..." class="w-full bg-gray-700 border border-gray-600 rounded p-2 text-white">
      </div>
    `;
    document.body.appendChild(botContainer);

    feather.replace();

    const chatBtn = document.getElementById('chatbot');
    const chatBox = document.getElementById('chat-box');
    const closeChat = document.getElementById('close-chat');
    const chatInput = document.getElementById('chat-input');
    const chatContent = document.getElementById('chat-content');

    chatBtn.onclick = () => chatBox.classList.toggle('hidden');
    closeChat.onclick = () => chatBox.classList.add('hidden');

    chatInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter' && chatInput.value.trim() !== '') {
        const userMsg = chatInput.value.trim();
        chatContent.innerHTML += `<p class='text-blue-400'>You: ${userMsg}</p>`;
        chatInput.value = '';
        setTimeout(() => {
          chatContent.innerHTML += `<p class='text-gray-300'>AI: Thank you for reaching Dream Choice HR! Our team will contact you soon.</p>`;
          chatContent.scrollTop = chatContent.scrollHeight;
        }, 600);
      }
    });
  </script>
